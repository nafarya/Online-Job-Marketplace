<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        app:cardCornerRadius="8dp">


        <ImageView
            android:layout_width="3dp"
            android:id="@+id/order_list_item_marker"
            android:layout_height="match_parent"
            android:background="@color/green"/>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:orientation="vertical">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/order_list_item_theme"
                    android:text="Тема: "
                    android:layout_toLeftOf="@id/bidlist_item_button"
                    android:textSize="20sp"
                    android:maxLines="2"
                    android:textColor="@color/black"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="8dp"
                    />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="44dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="8dp"
                    android:padding="10dp"
                    android:background="@drawable/shape"
                    android:id="@+id/change_status_button"
                    android:text="Подтвердить"
                    android:layout_alignParentRight="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/order_list_item_subject"
                android:layout_below="@id/order_list_item_theme"
                android:layout_toLeftOf="@id/bidlist_item_button"
                android:text="Subject: "
                android:textSize="16sp"
                android:textColor="@color/black"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:maxLines="2"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/order_list_item_orderType"
                android:text="orderType: "
                android:layout_below="@id/order_list_item_subject"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:maxLines="2"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/order_list_item_orderType"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">


                <TextView
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/order_list_item_price"
                    android:text="666 Руб"
                    android:layout_weight="1.78"
                    android:layout_marginLeft="8dp"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/order_list_item_date"
                    android:text="До: "
                    android:layout_marginLeft="8dp"
                    android:layout_marginBottom="8dp"
                    android:layout_weight="5"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/order_list_item_bid_num"
                    android:text="0 Ставок"
                    android:layout_weight="1.5"/>

            </LinearLayout>

            </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>