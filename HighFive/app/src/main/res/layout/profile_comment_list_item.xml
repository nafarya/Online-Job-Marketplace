<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="4dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="16dp"
                    android:id="@+id/profile_comment_avatar"
                    android:clickable="true"
                    android:src="@drawable/com_facebook_profile_picture_blank_square" />

                <RatingBar
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/profile_comment_rating_bar"
                    android:layout_toRightOf="@id/profile_comment_avatar"
                    android:layout_marginTop="16dp"
                    android:layout_marginLeft="16dp"
                    android:max="5"
                    android:numStars="5"
                    android:stepSize="0.01"
                    style="@android:style/Widget.Holo.Light.RatingBar.Small"
                    android:rating="2.5"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/profile_comment_rating_image"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="16dp"
                    android:layout_alignParentRight="true"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/profile_comment_username"
                    android:layout_below="@id/profile_comment_avatar"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="16dp"/>

            </RelativeLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/comment"
                android:gravity="left"
                android:id="@+id/profile_comment_text"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"/>

        </LinearLayout>

    </android.support.v7.widget.CardView>